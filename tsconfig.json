{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include DOM and modern JavaScript libraries
    "allowJs": true, // Allow JavaScript files to be compiled
    "skipLibCheck": true, // Skip type checking of declaration files
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default export
    "strict": true, // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in import paths
    "module": "ESNext", // Use ES module syntax
    "moduleResolution": "Node", // Resolve modules using Node.js-style resolution
    "resolveJsonModule": true, // Allow importing .json files
    "isolatedModules": true, // Ensure each file can be safely transpiled without relying on other files
    "jsx": "react-jsx", // Enable JSX for React projects
    "noEmit": true, // Disable emitting compiled output
    "noImplicitAny": true, // Raise errors for expressions and declarations with an implied `any` type
    "noUnusedLocals": true, // Report errors on unused locals
    "noUnusedParameters": true, // Report errors on unused parameters
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
    "noUncheckedIndexedAccess": true // Ensure that accessing an element in an array or object is always safe
  },
  "include": ["src"], // Include all files in the `src` directory
  "exclude": ["node_modules", "build"] // Exclude `node_modules` and the build folder
}
